BoxLayoutExample:

<BoxLayoutExample>:
    orientation: "vertical"
    spacing: '10dp'

    Label:
        text: root.score_text
        size_hint: 1, .05
        canvas.before:
            Color:
                rgba: root.score_color
            Rectangle:
                pos: self.pos
                size: self.size

    Label:
        text: root.timer_text
        font_name: "Fonts/DS-DIGI.TTF"
        font_size: '40dp'
        size_hint: 1, .05
        canvas.before:
            Color:
                rgba: root.BACKGROUND_COLOR
            Rectangle:
                pos: self.pos
                size: self.size

    Image:
        color: root.image_color
        source: root.FLAG_SRC
        size_hint: 1, .3
        canvas.before:
            Color:
                rgba: root.BACKGROUND_COLOR
            Rectangle:
                pos: self.pos
                size: self.size

    GridLayout:
        size_hint: 1, .5
        rows: 2
        cols: 2
        spacing: '5dp'
        Button:
            text: root.b1_text
            font_size: dp(root.b1_size)
            background_color: root.b1_color
            on_press: root.check_answer(1)
        Button:
            text: root.b2_text
            font_size: dp(root.b2_size)
            background_color: root.b2_color
            on_press: root.check_answer(2)
        Button:
            text: root.b3_text
            font_size: dp(root.b3_size)
            background_color: root.b3_color
            on_press: root.check_answer(3)
        Button:
            text: root.b4_text
            font_size: dp(root.b4_size)
            background_color: root.b4_color
            on_press: root.check_answer(4)

    BoxLayout:
        orientation: "horizontal"
        size_hint: 1, .1

        Slider:
            size_hint: 0.35, 1
            # pos_hint: 0.8, 1
            min: 5
            max: 100
            value: 20
            on_value: root.on_slider(self)
            disabled: root.slider_disability

        Label:
            size_hint: 0.35, 1
            text: 'Number of Questions\n                '+str(root.TOTAL_NUMBER)
            font_size: '13dp'

        Button:
            text: root.start_end_switch
            font_size: '20dp'
            size_hint: 0.3 ,1
            background_color: root.BACKGROUND_COLOR
            on_press: root.start_or_end()
            canvas.before:
                Color:
                    rgba: root.BACKGROUND_COLOR
                Rectangle:
                    pos: self.pos
                    size: self.size
